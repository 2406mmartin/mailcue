---
import PlusCircleIcon from '../assets/icons/plus-circle-bold.svg?raw';
import TicketIcon from '../assets/icons/ticket-bold.svg?raw';
import GearIcon from "../assets/icons/gear-bold.svg?raw";
---

<div class="h-full w-fit border-r-2 border-neutral-100 bg-white flex flex-col">
  <div class="text-2xl font-semibold text-neutral-900 p-8 text-center border-b-2 border-neutral-100">
    Mailcue
  </div>
  <div class="flex flex-col flex-1 justify-between">
    <ol class="p-8 flex flex-col text-sm font-medium text-neutral-900 gap-4 text-nowrap">
      <a href="/create"
        class="flex flex-row items-center gap-2 rounded-md active:scale-95 hover:bg-neutral-100 hover:cursor-pointer py-3 px-4 transition-all duration-100"
      >
        <div class="size-6" set:html={PlusCircleIcon} ></div>
        Create Ticket
      </a>
      <a href="/view"
        class="flex flex-row items-center gap-2 rounded-md active:scale-95 hover:bg-neutral-100 hover:cursor-pointer py-3 px-4 transition-all duration-100"
      >
        <div class="size-6" set:html={TicketIcon} ></div>

        View Tickets
      </a>
    </ol>
    <div class="p-8 flex flex-col text-sm font-medium text-neutral-900">
      <a href="/"
        class="flex flex-row items-center gap-2 rounded-md active:scale-95 hover:bg-neutral-100 hover:cursor-pointer py-3 px-4 transition-all duration-100"
      >
        <div class="size-6" set:html={GearIcon} ></div>

        Settings
      </a>
    </div>
  </div>
</div>
